<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle" >

    <!--内部填充颜色-->
    <solid android:color="#ffffff" />

    <!--边框粗细、颜色-->
    <stroke
        android:width="1dp"
        android:color="#F6F6F6" />

    <!--padding：内边距-->
    <padding
        android:bottom="10dp"
        android:left="10dp"
        android:right="10dp"
        android:top="10dp" />

    <!--圆角半径-->
    <corners android:radius="6dp" />

</shape>
